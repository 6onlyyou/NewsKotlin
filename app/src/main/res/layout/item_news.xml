<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        app:roundedCornerRadius="4dp" />

    <TextView
        android:id="@+id/publishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/image"
        android:textColor="@color/news_666666"
        android:textSize="14sp"
        tools:text="2017-08-16T22:36:16Z" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/publishedAt"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/news_666666"
        android:textSize="15sp"
        tools:text="Rachel Kaser" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/image"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/news_333333"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Barack Obamaâ€™s Charlottesville tweet is now the most-liked in history" />

</RelativeLayout>

